<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    tools:context=".detailevent.DetailActivityEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:textAlignment="center"
            tools:text="Tanggal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_home"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="FC Barcelona" />

            <TextView
                android:id="@+id/txt_couch"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_home"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="Pep Guardiola" />

            <TextView
                android:id="@+id/txt_couch_away"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txt_team_away"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="Jurgen Klopp" />

            <TextView
                android:id="@+id/txt_team_away"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Bayern Munich" />

            <ImageView
                android:id="@+id/logo_home"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@+id/txt_couch"
                android:layout_alignTop="@+id/logo_away"
                android:contentDescription="@string/todo" />

            <ImageView
                android:id="@+id/logo_away"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txt_couch_away"
                android:layout_marginTop="5dp"
                android:contentDescription="@string/todo" />

            <TextView
                android:id="@+id/txt_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="20sp"
                tools:text="0 : 0" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_score_away"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="20sp"
                tools:text="0 : 0" />

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_score_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="20sp"
                tools:text="0 : 0" />

            <TextView
                android:id="@+id/txt_form_home"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/logo_home"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="4-3-3" />

            <TextView
                android:id="@+id/txt_form_away"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/logo_away"
                android:gravity="center"
                android:textSize="14sp"
                tools:text="4-3-2-1" />

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/prograss"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_shadow_start_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/line1_statistic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_goal_away"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:textSize="14sp"
                    tools:text="Bayern Munich" />

                <TextView
                    android:id="@+id/txt_goal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/goal"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_goal_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:text="FC Barcelona"
                    android:gravity="start" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1_statistic"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/txt_shots_away"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:text="Bayern Munich"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/txtShots"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/shot"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_shots_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:text="FC Barcelona"
                    android:gravity="start" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_shadow_start_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/line1_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_red_away"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:text="0"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/txtRed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/red_card"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_red_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:text="0"
                    android:gravity="start" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line2_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1_cards"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/txt_yellow_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:text="1"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/txt_yellow_away"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:text="2"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/txtYellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/yellow_card"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_shadow_start_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:id="@+id/line1_lineup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_gk_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:text="0"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/txtGk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/goal_keeper"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_gk_away"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:text="0"
                    android:gravity="end" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line2_lineup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line1_lineup"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/txtDef"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/defender"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_def_away"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:text="2"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/txt_def_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:text="1"
                    android:gravity="start" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line3_lineup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line2_lineup"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/txt_mid_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:text="1"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/txt_mid_away"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:text="2"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/txtMid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="@string/midfielder"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/line4_lineup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line3_lineup"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/txtFor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="@string/striker"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_for_home"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    tools:text="1"
                    android:gravity="start" />

                <TextView
                    android:id="@+id/txt_for_away"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd"
                    android:textSize="14sp"
                    tools:text="2"
                    android:gravity="end" />
            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/cardview_shadow_start_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_sub_home"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                android:textSize="14sp"
                tools:text="0"
                android:gravity="start" />

            <TextView
                android:id="@+id/txt_sub_away"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                tools:text="0"
                android:gravity="end" />

            <TextView
                android:id="@+id/txtSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="@string/substitutions"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>